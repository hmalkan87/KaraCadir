@model KaraCadir.Northwind.MvcWebUI.Models.CategoryListViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";
        
        if (Model.CurrentCategory == category.CategoryId)
        {
            css += " active";
        }
        <a href="/Product/Index?category=@category.CategoryId" class="@css">@category.CategoryName</a>
    }

</div>
